@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

@*Form*@
<div class="row">
    @using (Html.BeginUmbracoForm<ContactController>("SendContact"))
    {
        <div class="form-group col-md-8">
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" required />
        </div>
        <div class="form-group col-md-8">
            <input type="email" class="form-control" id="Email" name="Email" placeholder="Email" required />
        </div>
        <div class="form-group col-md-8">
            <input type="text" class="form-control" id="Phone" name="Phone" placeholder="Phone" />
        </div>
        <div class="form-group col-md-10">
            <textarea class="form-control" rows="8" id="Message" name="Message" placeholder="Comments" required></textarea>
        </div>
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-secondary secondary-text secondary-border basic-bg">Submit<span class="icon-arrow"></span></button>
        </div>
    }
</div>